<Page
    x:Class="DataCollector.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataCollector"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" FontFamily="Segoe UI">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RadioButton x:Name="imperialRadioButton" Content="Imperial" HorizontalAlignment="Left" Margin="13,673,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="metricRadioButton" Content="Metric" HorizontalAlignment="Left" Margin="299,675,0,0" VerticalAlignment="Top"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="139,706,0,0" VerticalAlignment="Top"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="224,706,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="outputTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Output" VerticalAlignment="Top" Width="410"/>
        <ListBox HorizontalAlignment="Left" Height="626" Margin="8,46,0,0" VerticalAlignment="Top" Width="412" RequestedTheme="Default"/>
    </Grid>
</Page>
